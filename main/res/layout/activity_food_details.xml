<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodDetailsActivity">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test User1"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_food"
            app:layout_constraintVertical_bias="0.095" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="curry"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/quantitydisplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name" />

        <TextView
            android:id="@+id/quantitydisplay"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="5"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/contactdisplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_name" />

        <TextView
            android:id="@+id/contactdisplay"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="9877457894"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addtcontactdisplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantitydisplay" />

        <TextView
            android:id="@+id/addtcontactdisplay"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginBottom="50dp"
            android:text="8874578945"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactdisplay" />

        <Button
            android:id="@+id/button6"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_button"
            android:text="Order"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#1DB954"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addtcontactdisplay" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="  Item:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/quantitydisplay"
            app:layout_constraintEnd_toStartOf="@+id/last_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="  Quantity:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/contactdisplay"
            app:layout_constraintEnd_toStartOf="@+id/quantitydisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="  Phone 1:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addtcontactdisplay"
            app:layout_constraintEnd_toStartOf="@+id/contactdisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantitydisplay" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginBottom="50dp"
            android:text="  Phone 2:"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addtcontactdisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactdisplay" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>